{
  "mcpServers": {
    "n8n-mcp": {
      "command": "docker",
      "args": ["exec", "-i", "n8n-mcp", "python", "-m", "n8n_mcp"],
      "cwd": "/var/www/automatehub",
      "env": {
        "N8N_MCP_DATABASE_PATH": "/app/data/n8n_nodes.db"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/var/www/automatehub"],
      "cwd": "/var/www/automatehub"
    }
  }
}