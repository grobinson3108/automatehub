    n8n-list)
        /var/www/automatehub/mcp-wrappers/n8n-workflows-list.sh
        ;;
    
    help|*)
        echo "üîß MCP Wrapper pour Claude Terminal"
        echo "==================================="
        echo ""
        echo "Usage: mcp <command> [arguments]"
        echo ""
        echo "Commandes disponibles :"
        echo "  mysql <query>              - Ex√©cuter une requ√™te MySQL"
        echo "  n8n-create <name> [file]   - Cr√©er un workflow n8n"
        echo "  n8n-list                   - Lister les workflows n8n"
        echo ""
        echo "Exemples :"
        echo "  mcp mysql \"SELECT * FROM users LIMIT 5\""
        echo "  mcp n8n-create \"Mon Workflow\""
        echo "  mcp n8n-list"
